def courses
  @courses.map do |course|
    {
      clbid: course.clbid,
      crsid: course.crsid,
      id: course.id,
      seats: course.seats,
      dept_num_sec: course.dept_num_section,
      name: course.pretty_name,
      gereqs: course.pretty_gereqs,
      num_of_ges: course.num_of_ges,
      times: course.formated_times,
      department: course.department,
      number: course.number,
      credits: course.credits,
      status: course.status,
      days: course.pretty_days,
      location: course.pretty_location,
      instructors: course.pretty_instructors,
      enrolled: course.enrolled,
      level: course.level,
      max: course.max,
      section: course.pretty_section,
      semester: course.semester_num_to_name,
      term: course.term,
      year: course.year,
      description: course.pretty_description,
      prerequisites: course.prerequisites,
      notes: course.pretty_notes,
      course_type: course.course_type,
      num_ratings: course.num_ratings,
      difficulty: course.difficulty,
      rating: course.rating,
      prof_url: course.rate_my_prof_url
    }
  end
end

{
  count: @courses.count,
  courses: courses
}
